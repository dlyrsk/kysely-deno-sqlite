{
  "$schema": "https://deno.land/x/deno@v1.32.3/cli/schemas/config-file.v1.json",
  "lock": false,
  "tasks": {
    "test": "deno test -A --unstable",
    "check": "deno check mod.ts"
  },
  "lint": {
    "include": ["."],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["."],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
